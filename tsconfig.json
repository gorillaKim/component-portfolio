{
  "compilerOptions": {
    "target": "es5",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "jsx": "react",
    "module": "ESNext",
    "declaration": true,
    "declarationDir": "./dist",
    "sourceMap": false,
    "outDir": "./dist",
    "moduleResolution": "node",
    "emitDeclarationOnly": true,
    "removeComments": true,
    "baseUrl": "src",
  },
  "include": [
    "./src",
    "./src/types"
  ],
  "exclude": [
    "./dist",
    "./node_modules",
    "./src/**/*.test.tsx",
    "./src/**/*.stories.tsx",
  ]
}
